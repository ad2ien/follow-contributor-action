{
  "name": "follow-contributor-action",
  "version": "1.1.0",
  "description": "Github action that can be used to automatically follow your projects contributors",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "echo \"Error: no test specified\" && exit 1",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "engines": {
    "node": "^20.2.0",
    "yarn": "~1.22.17"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/okp4/follow-contributor-action.git"
  },
  "keywords": [
    "github",
    "github action",
    "follow"
  ],
  "author": {
    "name": "OKP4",
    "web": "https://okp4.network"
  },
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/okp4/follow-contributor-action/issues"
  },
  "homepage": "https://github.com/okp4/follow-contributor-action#readme",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.9.2",
    "@typescript-eslint/parser": "^6.12.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.54.0",
    "eslint-plugin-github": "^4.10.1",
    "js-yaml": "^4.1.0",
    "prettier": "3.1.0",
    "typescript": "^5.2.2"
  }
}
